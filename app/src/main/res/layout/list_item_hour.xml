<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTimeFrom"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="From" />

    <TextView
        android:id="@+id/tvTimeTo"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTimeFrom"
        android:gravity="center"
        android:text="To" />

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/tvTimeFrom"
        android:gravity="center_vertical"
        android:text="Subject" />

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvSubject"
        android:gravity="center_vertical"
        android:text="Room" />

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvRoom"
        android:gravity="center_vertical"
        android:text="Teacher" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvTimeFrom"
        android:gravity="center_vertical"
        android:text="Note" />

</RelativeLayout>