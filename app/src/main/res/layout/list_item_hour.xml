<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTimeFrom"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="From"
        android:textStyle="bold"
        android:background="@color/colorLightGrey"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/tvTimeTo"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvTimeFrom"
        android:gravity="center"
        android:text="To"
        android:textStyle="bold"
        android:background="@color/colorLightGrey"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tvTimeFrom"
        android:layout_toEndOf="@id/tvTimeFrom"
        android:gravity="center_vertical"
        android:text="Subject" />

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="Room"
        android:layout_below="@+id/tvSubject"
        android:layout_toRightOf="@+id/tvTimeFrom"
        android:layout_toEndOf="@+id/tvTimeFrom" />

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="Teacher"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvTimeTo"
        android:layout_toEndOf="@+id/tvTimeTo" />

    <!--<TextView
        android:id="@+id/tvNote"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvTimeFrom"
        android:layout_toRightOf="@+id/tvTimeFrom"
        android:gravity="center_vertical"
        android:text="Note" />-->

</RelativeLayout>